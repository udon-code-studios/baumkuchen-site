---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<a href={href}>
  <div class="w-72 h-64 p-8 flex flex-col gap-8 font-major-mono justify-center items-center">
    <h2 class="text-2xl">{title}</h2>
    <div class="w-14 h-14">
      <slot />
      <!-- icon -->
    </div>
  </div>
</a>

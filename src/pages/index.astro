---
import Layout from "../layouts/Layout.astro";
import BaumkuchenLogo from "../components/BaumkuchenLogo.astro";
import Card from "../components/Card.astro";
import icons from "../components/icons";
---

<Layout title="BFL">
  <main class="flex flex-col min-h-screen bg-space-cadet p-6">
    <div class="bg-isabelline flex-grow flex flex-col">
      <div class="grid grid-cols-4 gap-8 px-20 py-20 sm:py-40 justify-items-center">
        <div
          class="col-span-4 sm:col-span-2 lg:col-span-1 bg-space-cadet text-isabelline hover:bg-isabelline hover:text-space-cadet border-4 border-space-cadet hover:border-space-cadet duration-200"
        >
          <Card title="Strategy" href="/strategy"><icons.MdiDiceMultiple /></Card>
        </div>
        <div
          class="col-span-4 sm:col-span-2 lg:col-span-1 bg-ultra-violet text-isabelline hover:bg-isabelline hover:text-space-cadet border-4 border-ultra-violet hover:border-space-cadet duration-200"
        >
          <Card title="Performance" href="/performance"><icons.MdiCashUsd /></Card>
        </div>
        <div
          class="col-span-4 sm:col-span-2 lg:col-span-1 bg-rose-quartz text-isabelline hover:bg-isabelline hover:text-space-cadet border-4 border-rose-quartz hover:border-space-cadet duration-200"
        >
          <Card title="Blog" href="/blog"><icons.MdiDocument /></Card>
        </div>
        <div
          class="col-span-4 sm:col-span-2 lg:col-span-1 bg-pale-dogwood text-isabelline hover:bg-isabelline hover:text-space-cadet border-4 border-pale-dogwood hover:border-space-cadet duration-200"
        >
          <Card title="About" href="/about"><icons.MdiCommentQuestion /></Card>
        </div>
      </div>
      <div class="flex p-12 mt-auto items-center gap-8">
        <div class="w-16 h-16">
          <BaumkuchenLogo />
        </div>
        <div class="w-1 h-24 bg-space-cadet"></div>
        <h1 class="text-6xl font-bold font-serif">Baumkuchen Financial Labs</h1>
      </div>
    </div>
  </main>
</Layout>
